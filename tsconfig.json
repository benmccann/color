{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "Node",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"noImplicitThis": true
	},
	"files": [
		"./color.d.ts"
	],
	"typedocOptions": {
		"name": "@kurkle/color",
		"mode": "file",

		"includeDeclarations": true,
		"exclude": ["./node_modules/**/*"],

		"target": "ES6",
		"out": "./docs",
	},
}